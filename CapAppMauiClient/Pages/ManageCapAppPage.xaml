<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CapAppMauiClient.Pages.ManageCapAppPage"
             Title="Manage Cap App">

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="0,5,0,5" />
        </Style>
    </ContentPage.Resources>
    
    <VerticalStackLayout Margin="20">
        <Label Text="Create your content!" />
        <Entry Text="{Binding Path=CapApp.CapName}" Placeholder="Enter Text"/>
        <Button Text="Save" Clicked="OnSaveButtonClicked" />
        <Button Text="Delete" Clicked="OnDeleteButtonClicked" />
        <Button Text="Cancel" Clicked="OnCancelButtonClicked" />
    </VerticalStackLayout>
</ContentPage>